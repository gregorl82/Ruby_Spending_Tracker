<header>
  <h2><img src="/icons/wallet.png" alt="wallet" height="40px"> Add/Remove Budgets</h2>
</header>

<main>

  <div class="budgets header">
    <p class="item">Name</p>
    <p class="item">Amount</p>
    <p class="item">Warning Limit</p>
    <p class="item">Current Spending</p>
    <p class="item">Amount Remaining</p>
    <p class="item">Edit</p>
    <p class="item">Delete</p>
  </div>

  <% for budget in @budgets %>

    <div class="budgets">
      <p><%= budget.budget_name %></p>
      <p>£<%= "%.2f" % budget.budget_amount %></p>
      <p>£<%= "%.2f" % budget.warning_limit %></p>
      <p>£<%= "%.2f" % budget.total_spent() %></p>
      <p>£<%= "%.2f" % budget.amount_remaining()%></p>
      <p>
        <a href="/budgets/<%= budget.id %>/edit">
        <img src="/icons/edit.png" alt="edit" height="40px">
        </a>
      </p>
      <form action="/budgets/<%= budget.id %>/delete" method="POST">
        <button type="submit" style="border: 0; background: transparent">
        <img src="/icons/delete.png" height="38px" alt="submit">
        </button>
      </form>
    </div>

  <% end %>
  <div class="add-back-bttns">
    <p><a href="/budgets/new">Add</a></p>
    <p><a href="/transactions">Back</a></p>
  </div>
</main>
