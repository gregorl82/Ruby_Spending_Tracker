<header>
  <h2>Total spending: £<%= "%.2f" % @total %></h2>
</header>

<nav>
  <ul>
    <li>View by
      <ul>
        <li>Budget
          <ul>
            <% for budget in @budgets %>
            <li><a href="/budgets/<%= budget.id %>"><%= budget.budget_name %></a></li>
            <% end %>
          </ul>
        </li>
        <li>Tag
          <ul>
            <% for tag in @tags %>
            <li><a href="/transactions/<%= tag.tag_name %>"><%= tag.tag_name%></a></li>
            <% end %>
          </ul>
        </li>
      </ul>
    </li>
  </ul>
</nav>

<main>
  <hr />
    <% for transaction in @transactions %>
    <div class="transaction">
      <p><%= transaction.display_time %> <%= transaction.display_date %> </p>
      <p><%= transaction.tag().tag_name %></p>
      <p><%= transaction.merchant().merchant_name %></p>
      <p>£<%= "%.2f" % transaction.amount %></p>
      <p><%= transaction.budget().budget_name %></p>
      <div class="transaction-buttons">
        <p><a href="/transactions/<%= transaction.id %>/edit">Edit</a></p>
        <form action="/transactions/<%= transaction.id %>/delete" method="post">
          <input type="submit" value="Delete">
        </form>
      </div>
    </div>
    <% end %>
  </section>

  <aside>
    <nav>
      <ul>
        <li><a href="/budgets">Budgets</a></li>
        <li><a href="/tags">Tags</a></li>
        <li><a href="/merchants">Merchants</a></li>
      </ul>
    </nav>
  </aside>

</main>
