<header>
  <h2>Transactions for category: <%= @tag %></h2>
</header>

<main>

  <% if @transactions.count != 0 %>

    <% for transaction in @transactions %>
      <p><%= transaction.display_time %> <%= transaction.display_date %> </p>
      <p><%= transaction.merchant().merchant_name %></p>
      <p>Â£<%= "%.2f" % transaction.amount %></p>
      <p>Budget: <%= transaction.budget().budget_name %></p>
      <hr />
    <% end %>

  <% else %>

    <p>No transactions to display</p>

  <% end %>

  <p><a href="/transactions">Back to transactions</a></p>

</main>
